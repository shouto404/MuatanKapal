<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rute : PNK - PTBN"
            android:textColor="#272343"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#272343"
                android:padding="15dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <TextView android:id="@+id/tvSisaUpper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sisa Upper: 0 ton" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#272343"
                android:padding="15dp"
                android:layout_marginStart="5dp"
                android:orientation="vertical">
                <TextView android:id="@+id/tvSisaLower" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sisa Lower: 0 ton" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/etUpperDeck"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Kapasitas Upper (ton)"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etLowerDeck"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Kapasitas Lower (ton)"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">
            <Button
                android:id="@+id/btnSetKapasitas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SET"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#272343"/>
            <Button
                android:id="@+id/btnResetKapasitas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RESET"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF5E5E"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etTanggal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Pilih Tanggal"
            android:focusable="false"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spKendaraan"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/btn_dropdown"/>

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HITUNG &amp; TAMBAH KE TABEL"
            android:backgroundTint="#272343"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTambahKendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ TAMBAH KENDARAAN"
            android:backgroundTint="#FFFFFF"
            android:textColor="#272343"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="24dp"/>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="4dp">
            <TableRow android:background="#EEEEEE" android:padding="8dp">
                <TextView android:text="Tgl" android:textStyle="bold" android:layout_weight="1"/>
                <TextView android:text="Kndrn" android:textStyle="bold" android:layout_weight="1"/>
                <TextView android:text="Gol" android:textStyle="bold" android:layout_weight="1"/>
                <TextView android:text="Deck" android:textStyle="bold" android:layout_weight="1"/>
                <TextView android:text="Harga" android:textStyle="bold" android:layout_weight="1"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnHapusMuatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HAPUS SEMUA DATA TABEL"
            android:backgroundTint="#FF5E5E"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>